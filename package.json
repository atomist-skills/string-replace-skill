    "copyright-regex": "^1.1.6",
    "fast-glob": "^3.2.2",
    "filename-regex": "^2.0.1",
    "iconv-lite": "^0.4.19",
    "mentions-regex": "^2.0.3",
    "regex-email": "^1.0.2",
    "shell-quote": "^1.7.2",
    "tmp": "^0.2.1",
    "todo-regex": "^0.1.1",
    "url-regex": "^5.0.0"
  },
  "devDependencies": {
    "@atomist/skill-bundler": "^0.1.13",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "shadow-cljs": "^2.8.69",
    "source-map-support": "0.5.9",
    "ws": "^7.3.0"
  },
  "main": "node_modules/@atomist/api-cljs/app.js",
  "husky": {
    "hooks": {
